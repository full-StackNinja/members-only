extends layout
block header
  div.row
    div.col
    div.col.sign-up-container
      h1=title
      div.group-control
        form.sign-up(method='POST')
          label(for="first-name") First Name:
          input#first-name.form-control(type='text'  name='first_name' value=(undefined===user?"": user.first_name))
          label(for='last-name') Last Name:
          input#last-name.form-control(type='text'  name='last_name' value=(undefined===user?"":user.last_name))
          label(for="username") Username/Email:
          input#username.form-control(type='text'  name='username' value=(undefined===user?"":user.username))
          label(for='pswd') Password:
          input#pswd.form-control(type='password'  name='password')
          label(for='conf-pswd') Confirm password:
          input#conf-pswd.form-control(type='password'  name='conf_password')
          button.btn.btn-primary(type='submit') Submit
      p Already have an account?
      p
        a(href="/user/login") Login
      if errors
        ul
          for error in errors
            li=error.msg


    div.col
